<ul class="toolbar">
	<% unless Project.where(:user_id => current_user).empty? %>
		<li><%= link_to raw( "#{ content_tag( :i, '', :class => 'icon-plus' ) } New activity" ), new_activity_path, :class => [:toolbar_button], :title => "Create a new activity" %></li>
	<% end %>
	<li><%= link_to raw( "#{ content_tag( :i, '', :class => 'icon-plus' ) } New project" ), new_project_path, :class => [:toolbar_button], :title => "Create a new project" %></li>
  <li><%= link_to raw( "#{ content_tag( :i, '', :class => 'icon-check' ) } Filter" ), '#filter', :class => [:toolbar_button, :toggable, :expandable], :title => "Filter" %></li>
</ul>

<div class="btn-group pull-right" id="view_by_toolbar">
  <button class="btn by_date <%= active_view_class?( :date ) %>" title="View by date">Date</button>
  <button class="btn by_project <%= active_view_class?( :project ) %>" title="View by project">Project</button>
  <button class="btn by_priority <%= active_view_class?( :priority ) %>" title="View by priority">Priority</button>
  <button class="btn by_calendar <%= active_view_class?( :calendar ) %>" title="View by calendar">Calendar</button>
</div>
<%= render "shared/analytics_filter_toolbar" %>

<section class="group">
	
	<% unless @complete_pomodoros.empty? and @void_pomodoros.empty? %>
		<%= render "completed_vs_voided_pomodoros" %>
	<% end %>
	
	<% unless @complete_pomodoros.empty? or @estimated_pomodoros.empty? %>
		<%= render "estimated_vs_completed_pomodoros" %>
	<% end %>
	
	<% unless @complete_pomodoros.empty? %>
		<%= render "completed_pomodoros_vs_worked_time" %>
	<% end %>
	
	<% unless @planned_activities.empty? and @unplanned_activities.empty? %>
		<%= render "planned_activities_vs_unplanned_activities" %>
	<% end %>
	
	<% if @complete_pomodoros.empty? and @void_pomodoros.empty? and @planned_activities.empty? and @unplanned_activities.empty? %>
		<p class="pageContainer">
			You have no data to process.
		</p>
		<p class="pageContainer">
			Complete some pomodoros and then come back to see how you stand.
		</p>
	<% end %>

</section>
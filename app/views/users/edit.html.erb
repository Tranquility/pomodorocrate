<section class="group formContainer signUpForm">
	<h6>My details</h6>
	
	<%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages', :object => f.object %>

	  <div class="field">
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </div>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </div>
	  <div class="field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </div>
	  <div class="field">
	    <%= f.label :password_confirmation, "Confirmation" %><br />
	    <%= f.password_field :password_confirmation %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Update", :class => :submit %>
	  </div>
	<% end %>
	
	<div class="gravatar">
	  <%= gravatar_for @user, :size => 205 %>
	  <a href="http://gravatar.com/emails" class="button">change</a>
	</div>
	
</section>
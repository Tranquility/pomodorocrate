<section class="group formContainer signUpForm">
	<h6>Hello!</h6>
	
	<%= form_for(@contact_request) do |f| %>

	  <div class="field">
	    <%= f.label "What's on your mind?" %><br />
	    <%= f.text_area :content %>
	  </div>
	  <div class="field narrow">
			<div>
	    	<%= f.label :bug %>
	    	<%= f.check_box :bug %>
			</div>
	
			<div>
				<%= f.label :feature_request %>
	    	<%= f.check_box :feature_request %>
			</div>
			
			<div>
				<%= f.label :suggestion %>
	    	<%= f.check_box :suggestion %>
			</div>
			
			<%= hidden_field_tag 'contact_request[debug_info]', debug(request.env).to_s %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Get in touch!", :class => %w[btn btn-primary] %>
      <%= link_to "Nevermind...", activities_path, :class => :button %>
	  </div>
	<% end %>
	
</section>
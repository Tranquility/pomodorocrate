<section class="group formContainer signUpForm">
	<h6>Reset password</h6>
	
	<%= form_for(:user, :url => email_reset_password_path, :method => :post) do |f| %>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Reset password", :class => :submit %>
	  </div>
	<% end %>
	
</section>
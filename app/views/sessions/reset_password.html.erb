<section class="group formContainer signUpForm">
	<h6>Hi! Enter your email to get your <strong>reset password</strong> link</h6>
	
	<%= form_for(:user, :url => email_reset_password_path, :method => :post) do |f| %>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Reset password", :class => [:submit, :reset_password] %>
	  </div>
	<% end %>
	
</section>
<section class="group formContainer signUpForm">
	<h6>Hello! <strong>Sign in</strong> to get started!</h6>
	
	<%= form_for(:session, :url => sessions_path) do |f| %>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </div>
	  <div class="field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </div>
	  <div class="actions">
			<%= link_to "Forgot your password?", reset_password_path, :class => :button %>
	    <%= f.submit "Sign in", :class => [:submit, :login] %>
	  </div>
	<% end %>
	
</section>